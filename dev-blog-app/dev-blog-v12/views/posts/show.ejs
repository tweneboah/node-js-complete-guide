<% include ../partials/header %> 


<link rel="stylesheet" href="/css/createPostForm.css">

<div>
    <h1>A Post</h1>
   
    <h2><%=post.title%></h2>
    <p><%=post.description%></p>   
   <h3>Comments</h3>
    <p><a class="btn btn-success" href="/posts/<%=post.id%>/comments/new">Add Comment</a></p>

    <form action="/posts/<%=post._id%>?_method=DELETE" method='POST'>
        <button class="btn btn-danger">Delete</button>
    </form>

    <div>
        <a href="/posts/update/<%=post.id%>/new">Edit</a>
    </div>
    <%post.comments.forEach((post) => {%>
        <h5><%=post.author%></h5>
         <p><%=post.text%></p>
    <% })%>
</div>

