                        <div class="form-group">
                            <input type="text" class="form-input" name="username" id="name" placeholder="Username"/>
                        </div>

                        <div class="form-group">
                            <input type="text" class="form-input" name="password" id="name" placeholder="Password"/>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-input" name="firstname" id="name" placeholder="Firstname"/>
                        </div>

                        <div class="form-group">
                            <input type="email" class="form-input" name="email" id="password" placeholder="Description"/>
