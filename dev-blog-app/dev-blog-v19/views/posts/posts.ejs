<% include ../partials/header %> 

<link rel="stylesheet" href="/css/createPostForm.css">

<div>
    <h1>All Posts.</h1>

    

    <%posts.forEach((post) => {%>
        <h2><%=post.title%></h2>
        <p><%=post.description%></p>
        <h5 class="text-success">CREATED BY: <%=post.author.username%></h5>
        <a href="/posts/<%=post.id%>"> Read more</a>
   <% })%>

</div>

